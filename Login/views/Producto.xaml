                               TextColor="White"
                               FontSize="20"/>
                    </VerticalStackLayout>
                    <Button Grid.Row="1"
                            Grid.Column="0"
                            Text="Detalle"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="22"
                            BackgroundColor="#9B3737"
                            HorizontalOptions="Center"
                            Padding="50,0"
                            Clicked="Button_Clicked_3"
                            />
                    <Image Grid.RowSpan="2"
                           Grid.Column="1"
                           Source="micro.png" 
                           HeightRequest="150"
