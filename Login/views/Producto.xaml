                </Grid>
            </Border>
            <Border StrokeShape="RoundRectangle 10"
                    StrokeThickness="0"
                    BackgroundColor="#670010"
                    VerticalOptions="Start"
                    Padding="5"
                    Margin="1">
                <Grid ColumnDefinitions="*, 150"
                      RowDefinitions="*,AUTO">
                    <VerticalStackLayout Grid.Row="0"
                                         Grid.Column="0"
                                         Spacing="10">
