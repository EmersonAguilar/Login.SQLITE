                    <Button Grid.Row="1"
                            Grid.Column="0"
                            Text="Detalle"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="22"
                            BackgroundColor="#9B3737"
                            HorizontalOptions="Center"
                            Padding="50,0"
                            Clicked="Button_Clicked_4"
                            />
                    <Image Grid.RowSpan="2"
                           Grid.Column="1"
                           Source="audifonos.png" 
                           HeightRequest="150"
                           WidthRequest="150"/>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>