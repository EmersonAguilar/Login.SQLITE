                    <Button Grid.Row="1"
                            Grid.Column="0"
                            Text="Detalle"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="22"
                            BackgroundColor="#9B3737"
                            HorizontalOptions="Center"
                            Padding="50,0"
                            Clicked="Button_Clicked_2"
                            />
                    <Image Grid.RowSpan="2"
                           Grid.Column="1"
                           Source="rtx.png" 
                           HeightRequest="150"
                           WidthRequest="150"/>
                </Grid>
            </Border>
            <Border StrokeShape="RoundRectangle 10"
                    StrokeThickness="0"
                    BackgroundColor="#670010"
                    VerticalOptions="Start"
                    Padding="5"
                    Margin="1">
                <Grid ColumnDefinitions="*, 150"
                      RowDefinitions="*,AUTO">
                    <VerticalStackLayout Grid.Row="0"
                                         Grid.Column="0"
                                         Spacing="10">
                        <Label Text="Microfono"
                               FontSize="25"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="White"/>
